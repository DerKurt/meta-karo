/ {
	/delete-node/ sound;

};

&dsi {
	#address-cells = <1>;
	#size-cells = <0>;

	status = "okay";

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			dsi_in: endpoint {
				remote-endpoint = <&ltdc_ep1_out>;
			};
		};

		port@1 {
			reg = <1>;
			dsi_out: endpoint {
				remote-endpoint = <&dsi_bridge_in>;
			};
		};
	};

	panel@0 {
		compatible = "dsi,panel-generic";
		reg = <0>;
		status = "okay";

		port {
			dsi_panel_in: endpoint {
				remote-endpoint = <&dsi_bridge_out>;
			};
		};
	};
};

&i2c6 {
	status = "okay";

        dsi_lvds_bridge: sn65dsi84@2c {
                compatible = "ti,sn65dsi83";
                reg = <0x2c>;
                ti,dsi-lanes = <2>;
                ti,lvds-format = <2>;
                ti,lvds-bpp = <24>;
                ti,width-mm = <217>;
                ti,height-mm = <136>;
                enable-gpios = <&gpioe 4 GPIO_ACTIVE_LOW>;
                status = "okay";

                display-timings {
                        lvds {
                                clock-frequency = <68200000>;
                                hactive = <1280>;
                                vactive = <800>;
                                hback-porch = <5>;
                                hfront-porch = <64>;
                                vback-porch = <2>;
                                vfront-porch = <40>;
                                hsync-len = <1>;
                                vsync-len = <1>;
                                hsync-active = <0>;
                                vsync-active = <0>;
                                de-active = <0>;
                                pixelclk-active = <0>;
                        };
                };

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				dsi_bridge_in: endpoint@0 {
					remote-endpoint = <&dsi_out>;
				};
			};
			port@1 {
				reg = <1>;
				dsi_bridge_out: endpoint@0 {
					remote-endpoint = <&dsi_panel_in>;
				};
			};
		};
        };
};

&ltdc {
	status = "okay";

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;			
			ltdc_ep1_out: endpoint@0 {
				remote-endpoint = <&dsi_in>;
			};
		};
	};
};

&sdmmc1 {
	status = "disabled";
};

&timers2 {
	status = "okay";

	qsmp_pwm2: pwm {
		status = "okay";
	};
};

&uart4_pins {
	pins1 {
		/delete-property/ bias-disable;
		bias-pull-up;
	};
};
